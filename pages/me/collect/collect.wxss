page{
  background-color: #F2F2F2;
}

.collect-header-view{
  height: 90rpx;
  width: 100%;
  background-color: white;
  align-items: center;
  display: flex;
  flex-direction: row;
  box-shadow: 0rpx 5rpx 10rpx rgba(0,0,0,0.2);
}

.collect-menu-all{
  margin: 0rpx 0rpx 0rpx 20rpx;
  border: 4rpx solid #B8B8B8;
  font-size: 30rpx;
  color: #B8B8B8;
  border-radius: 6rpx;
  padding: 0rpx 10rpx;
}

.selected{
  border: 4rpx solid #282828;
  color: #282828;
}

.collect-list{
  margin-top: 20rpx;
  background-color: white;
}

.sku-item{
  height: 220rpx;
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center; 
}

.sku-item-url{
  width: 200rpx;
  height: 200rpx;
}

.sku-item-detail{
  height: 200rpx;
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.sku-item-desc{
  font-size: 28rpx;
  color: #282828;
  font-weight: bold;
  flex: 1;
}

.sku-item-properties{
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku-item-grouped{
  width: 30rpx;
  height: 30rpx;
  margin-left: 16rpx;
  background-color: #FFEB00;
  font-size: 24rpx; 
}

.sku-item-pai{
  width: 30rpx;
  height: 30rpx;
  margin-left: 16rpx;
  font-size: 24rpx; 
}

.sku-item-footer{
  height: 40rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.sku-item-collected{
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  margin-top: -15rpx;
 
  
}