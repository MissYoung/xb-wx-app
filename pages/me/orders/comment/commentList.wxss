.commentItem{
  background-color: white;
  margin: 0rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.commentItem-header-sepretor{
  margin: 0rpx 20rpx;
  height: 2rpx;
  background-color: #EDEDED;
}

.commentItem-header{
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.commentItem-header-avar{
  width: 70rpx;
  height: 70rpx;
  margin: auto 20rpx;
  border-radius: 35rpx;
  overflow: hidden;
}

.commentItem-header-main{
  flex: 1;
  display: flex;
  flex-direction: column;
}

  .commentItem-header-main-userInfo-text{
    font-size: 28rpx;
    color: #282828;
  }

  .commentItem-header-main-userInfo-address{
    font-size: 22rpx;
    color: #CCCCCC;
  }

  .comment-header-main-price{
    font-size: 24rpx;
    color: #F80000;
  }

.commentItem-header-trailing{
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: right;
  margin-right: 20rpx;
}


.commentItem-header-trailing-tags{
  text-align: right;
  flex: 1;
}

.commentItem-header-trailing-gained{
  font-size: 20rpx;
  color: #B8B8B8;
  height: 40rpx;
  text-align: right;
}



  


.commentItem-owned{
  height: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.commentItem-owned-price{
  font-size: 24rpx;
  color: #F80000;
  margin-left: 110rpx;
}
.commentItem-owned-sepretor{
  height: 2rpx;
  margin: auto 20rpx;
  background-color: #EDEDED;
}

.commentItem-comment-content{
  font-size: 30rpx;
  color: #666666;
  margin: 10rpx 20rpx;
}

.commentItem-footer{
  height: 70rpx;
  margin-left: 20rpx;
}

.commentItem-footer-comment-createDate{
  font-size: 22rpx;
  color: #B8B8B8
}

.commentItem-footer-space{
  flex: 1;
}