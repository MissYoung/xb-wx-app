.success-view-show{
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 60;
  display: flex;
  flex-direction: row;
}

.success-view-show-center{
  height: 60%;
  background: #ffffff;
  width: 90%;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.success-view-show-center-top{
  height: 50%;
  width: 100%;
  background-color: #F6CB1A;
  display: flex;
  flex-direction: row;
}

.success-view-show-center-bottom{
  height: 50%;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-view-show-center-top-subView{
  margin: auto;
  background-color: white;
  width: 80%;
  height: 60%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.success-view-show-center-top-subView-amount{
  color: #F80000;
  font-size: 70rpx;
  text-align: center;
}

.success-view-show-center-top-subView-detail{
  color: #F80000;
  font-size: 24rpx;
  text-align: center;
}

.success-view-show-center-bottom-result{
  font-size: 48rpx;
  color: #282828;
  margin: 40rpx auto;
}

.success-view-show-center-bottom-detail{
  color: #B8B8B8;
  font-size: 26rpx;
}

.btn-views{
  flex: 1;
  display: flex;
  flex-direction: row;
  margin: 40rpx auto;
}

.btn-views-show-ticket{
  color: #666666;
  font-size: 30rpx;
  background-color: #B8B8B8;
  margin: 10rpx auto;
  flex: 1;
}

.btn-views-show-back-to-main{
  color: #FFFFFF;
  font-size: 30rpx;
  background-color: red;
  margin: 10rpx auto;
  flex: 1;
}