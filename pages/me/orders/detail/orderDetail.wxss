page{
  background-color: #F2F2F2;
  display: flex;
  flex-direction: column;
}

.user-info-view{
  background-color: white;

}

.user-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 20rpx;
}

.user-name-view{
  font-size: 32rpx;
  color: #282828;
  font-weight: bold;
}

.user-phone-view{
  font-size: 26rpx;
  color: #666666;
}
.address-view{
  font-size: 26rpx;
  color: #666666;
  margin: auto 20rpx;
}

.line-view{
  height: 5rpx;
  background-color: #F80000;
  margin: 20rpx 30rpx;
}

.transport-view{
  background-color: white;
  display: flex;
  flex-direction: column;
  height: 176rpx;
  margin-top: 20rpx;
}

.transport-fee-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto 20rpx;
}

.transport-fee-view-title{
  font-size: 30rpx;
  color: #282828;
  font-weight: bold;
  width: 100rpx;
}

.transport-fee-view-value{
  font-size: 30rpx;
  color: #666666;
  margin-left: 20rpx;
}

.sepre-line{
  height: 2rpx;
  background-color: #EDEDED;
  margin: 0rpx 20rpx;
}

.comment-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto 20rpx;
}

.comment-view-title{
  font-size: 30rpx;
  color: #282828;
  font-weight: bold;
  width: 100rpx;
}

.comment-view-value{
  font-size: 30rpx;
  color: #666666;
  margin-left: 20rpx;
}

.money-view{
  background-color: white;
  display: flex;
  flex-direction: column;
  height: 264rpx;
  margin-top: 20rpx;
}

.product-money-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: auto 20rpx;
}

.product-money-view-title{
  font-size: 26rpx;
  color: #666666;
}

.product-money-view-value{
  font-size: 30rpx;
  color: #F80000;
}

.transport-fee{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: auto 20rpx;
}

.transport-fee-title{
  font-size: 26rpx;
  color: #666666;
}

.transport-fee-value{
  font-size: 30rpx;
  color: #F80000;
}

.real-fee-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto 20rpx;
}

.real-fee-view-title{
  font-size: 30rpx;
  color: #282828;
  text-align: right;
  flex: 1;
  margin-right: 10rpx;
}

.real-fee-view-value{
  font-size: 30rpx;
  color: #F80000;
  font-weight: bold;
  width: 140rpx;
}

.transport-order-view{
  margin-top: 20rpx;
  height: 176rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.order-no-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto 20rpx;
}

.order-no-view-title{
  font-size: 30rpx;
  color: #282828;
  font-weight: bold;
  width: 140rpx;
}

.order-no-view-value{
  flex: 1;
  text-align: left;
  font-size: 30rpx;
  color: #666666;
}

.order-no-view-value-copy{
  width: 80rpx;
  border: 2rpx solid #F2F2F2;
