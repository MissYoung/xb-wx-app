  color: #666666;
  text-align: center;
}

.order-time-view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto 20rpx;
}

.order-time-view-title{
  font-size: 30rpx;
  color: #282828;
  font-weight: bold;
  width: 140rpx;
}
.order-time-view-value{
  flex: 1;
  text-align: left;
  font-size: 30rpx;
  color: #666666;
}


.product-view{
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
}

.product-view-image{
  width: 200rpx;
  height: 200rpx;
}

.product-view-detial{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.product-view-detial-desc{
  font-size: 30rpx;
  color: #282828;
}

.product-view-detial-price{
  font-size: 22rpx;
  color: #B8B8B8;
}

.product-view-desc{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-view-desc-key {
  font-size: 28rpx;
  color: #F80000;
}

.product-view-desc-value {
  font-size: 22rpx;
  color: #B8B8B8;
}