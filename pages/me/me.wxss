page{
  height: 100%;
  background-color: #F2F2F2;
}

.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.avatarBackground{
  width: 100%;
  height: 112rpx;
  justify-content: center;
  display: flex;

}

.userinfo-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  margin-top: -78rpx;
}

.userinfo-nickname {
  color:black;
  padding-top: 20rpx;
}

.separation{
  margin-top: 20rpx;
  background-color: #EDEDED;
  height: 2rpx;
  width: 90%;
}

.section-first{
  display: flex;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  background-color: white;
}

.block01{
  flex: 1;
  height: 140rpx;
  flex-direction: row;
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.section-first .extend{
  border-right: 0.6rpx solid #EDEDED;
}

.block02{
  width: 140rpx;
  height: 140rpx;
}

.block03{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* display: inline-block; */

}

.cell-header{
  font-size: 30rpx;
  /* display: block; */
}

.cell-header-new-info{
  background-color: red;
  width: 14rpx;
  height: 14rpx;
  border-radius: 7rpx;
  display: inline-block;
  margin-bottom: 16rpx;
}

.cell-detail{
  font-size: 22rpx;
  /* display: block; */
  color: #FC9C00;
  padding-top: 6rpx;
}

.block03 .extend{
  color: #0069FF;
}

.section-second{
  background-color: white;
  margin-top: 10rpx;
  flex-direction: column;
}

.section-second-header{
  height: 88rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 0.6rpx #EDEDED solid;
  justify-content: center;
  display: flex;
  align-items: center;
  
}

.all-order{
  flex: 1;
  font-size: 28rpx;
}

.arrow {
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.section-second-items{
  width: 100%;
  height: 180rpx;
  display: flex;
}

.sub-module{
  flex: 1;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.module-img{
  width: 46rpx;
  height: 42rpx;
  margin-left: 17rpx;
}

.module-img-new-info{
  background-color: red;
  width: 14rpx;
  height: 14rpx;
  border-radius: 7rpx;
  display: inline-block;
  margin-bottom: 28rpx;
  margin-left: 6rpx;
}

.module-name{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #633232;
}

.section-three{
  background-color: white;
  margin-top: 20rpx;
}

.sub-item-friend{
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sub-item-theme-friend{
  display: flex;
  flex-direction: row;
}

.title-friend{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  margin-top: 20rpx;
  align-items: center;
}

.item-friend-sort{
  color: #282828;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.item-friend-detail{
  color: #999999;
  font-size: 22rpx;
  text-align: right;
  width: 100%;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.section-four{
  background-color: white;
  margin-top: 20rpx;
}

.sub-item{
  height: 88rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.sub-item-theme{
  display: flex;
  flex-direction: row;
}

.item-img{
  margin-left: 30rpx;
  width: 36rpx;
  height: 36rpx;
}

.item-name{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #282828;
  height: 30rpx;
}

.sub-item .arrow{
text-align: right;
}